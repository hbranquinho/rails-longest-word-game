<row class="justify-content-center">
  <h1 class="text-center">New Game</h1>
  <div class="d-flex justify-content-around">
    <% @letters.each do |letter| %>
    <div class="letter justify-content-around align-items-center rounded-circle"><%= letter %></div>
    <% end %>
  </div>
  <form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input name="letters" type="hidden" value='<%= @letters %>' />
    <input type="text" name="word" class=" w-100">
    <input type="submit" class="btn btn-danger mt-3" value="Play">
  </form>
</row>

